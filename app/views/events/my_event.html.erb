<div class="container">
  <h1><%= @event.title %></h1>
  <p><%= @event.description %></p>
  
  <div class="row">
    <div class="col-md-6">
      <% if current_user == @event.admin %>
  <%= link_to "Mon espace événement", my_event_event_path(@event) %>
<% end %>


<p><strong>Créateur :</strong> <%= @event.user.email %></p>
      <p><strong>Date de début :</strong> <%= @event.start_date.strftime("%d %B %Y %H:%M") %></p>

      <p><strong>Lieu :</strong> <%= @event.location %></p>
      <p><strong>Prix :</strong> <%= number_to_currency(@event.price, precision: 2) %></p>
    </div>
    <div class="col-md-6">
      <p><strong>Inscrits :</strong> <%= @event.participants.count %></p>


<% if user_signed_in? && !@event.participants.include?(current_user) && @event.admin != current_user %>
  <%= link_to "Rejoindre l'événement", new_event_attendance_path(@event), class: "btn btn-primary" %>
<% end %>

<div class="col-md-6">
  <p><strong>Inscrits :</strong> <%= @event.participants.count %></p>
</div>

<% if user_signed_in? && @event.user == current_user %>
  <%= link_to "Mon espace événement", my_event_event_path(@event) %>
<% end %>

    </div>
  </div>
</div>


<%= link_to "Modifier l'événement", edit_event_path(@event) %>
<%= form_tag(event_path(@event), method: :delete) do %>
                  <%= button_tag(type: 'submit', class: 'nav-link', style: 'background: none; border: none; cursor: pointer;') do %>
                    Supprimer l'événement
                  <% end %>
